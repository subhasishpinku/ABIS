<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bab7b7">
    <LinearLayout
        android:background="#002060"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="FORGOT PASSWORD"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

    <EditText
        android:id="@+id/email"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/round_corner"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:hint="Please enter your registered email id"

        />

    <Button
        android:background="@drawable/round_corner2"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/submit"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Reset"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emailid"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email_id"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/code"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Code"
            android:background="@drawable/round_corner"
            android:gravity="center"/>
        <EditText
            android:id="@+id/newpass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_corner"
            android:hint="Enter New Password"
            android:gravity="center"/>
        <EditText
            android:id="@+id/renewpass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_corner"
            android:hint="Retype New Password"
            android:gravity="center"/>
        <Button
            android:background="@drawable/round_corner2"
            android:textColor="#ffffff"
            android:id="@+id/procede"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Submit"/>


    </LinearLayout>

</LinearLayout>